<form action="/restaurants" method="POST">
  <div class="text-center">
    <input type="text" name="name" class="mb-1 restaurant-show-title">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" name="category">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" name="location">
          <a href="" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input name="phone">
        </p>

        <p class="mb-1 col-12">
          <textarea rows='5' name="description" style="min-width: 100%">
          </textarea>
        </p>

        <img class=" rounded mx-auto d-block mb-4 w-100" style="max-width: 600px;">

        <div class="text-center">
          <button type="submit" class="btn btn-sm btn-info">Create</button>
        </div>
      </div>
    </div>
  </div>
</form>