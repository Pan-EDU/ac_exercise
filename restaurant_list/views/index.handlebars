{{!-- Search Bar --}}
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱關鍵字" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">

      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="justify-content-around d-flex">
                <span class="badge badge-pill badge-warning font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

                <a href="/restaurants/{{ this._id}}/edit" class="btn btn-success btn-sm">edit</a>

                <form action="/restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger btn-sm">delete</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
      <div class="text-center">
        <a href="/restaurants/new" class=" btn-warning btn">Create</a>
      </div>
    </div>
  </div>
</div>